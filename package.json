{
  "name": "quicksilver",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "start": "concurrently \"npm run serve\" \"wait-on http://localhost:8080 && nw .\"",
    "build": "npm run build:clean && npm run build:vue && npm run build:nw",
    "build:clean": "rimraf ./dist ./build",
    "build:vue": "vue-cli-service build",
    "build:nw": "build --concurrent --tasks win-x86,linux-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "build:windows": "npm run build:windows:clean && npm run build:vue && build --tasks win-x86 --mirror https://dl.nwjs.io/ .",
    "build:linux": "npm run build:linux:clean && npm run build:vue && build --tasks linux-x64 --mirror https://dl.nwjs.io/ .",
    "build:windows:clean": "rimraf ./dist ./build/nw-vue-1.8.0-win-x86 ./build/nw-vue-1.8.0-win-x86.zip ./build/nw-vue-1.8.0-win-x86.7z ./build/nw-vue-1.8.0-win-x86-Setup.exe",
    "build:linux:clean": "rimraf ./dist ./build/nw-vue-1.8.0-linux-x64 ./build/nw-vue-1.8.0-linux-x64.zip"
  },
  "main": "http://localhost:8080",
  "dependencies": {
    "@types/dom-serial": "^1.0.2",
    "bootstrap-vue": "^2.21.2",
    "cbor-x": "^0.9.4",
    "chart.js": "^2.9.4",
    "chartjs-plugin-crosshair": "^1.2.0",
    "core-js": "^3.19.1",
    "three": "0.133.0",
    "vue": "^2.6.14",
    "vue-chartjs": "^3.5.1",
    "vue-class-component": "^7.2.3",
    "vue-gl": "^1.0.0",
    "vue-moment": "^4.1.0",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.3",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "^4.5.15",
    "@vue/cli-plugin-eslint": "^4.5.15",
    "@vue/cli-plugin-typescript": "^4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "nw": "0.54.0-sdk",
    "nwjs-builder-phoenix": "^1.15.0",
    "nwjs-types": "^1.0.0",
    "wait-on": "^6.0.0",
    "concurrently": "^6.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4",
    "sass-loader": "^8.0.2",
    "typescript": "~4.1.5",
    "vue-template-compiler": "^2.6.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "window": {
    "width": 960,
    "height": 600,
    "min_width": 700,
    "min_height": 500,
    "icon": "public/logo.png"
  },
  "build": {
    "nwVersion": "v0.54.0",
    "nwFlavor": "normal",
    "output": "./build",
    "targets": [
      "zip",
      "nsis7z"
    ],
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "strippedProperties": [
      "ManifestComments",
      "scripts",
      "devDependencies",
      "build"
    ],
    "overriddenProperties": {
      "main": "dist/index.html",
      "window": {
        "width": 960,
        "height": 600,
        "min_width": 700,
        "min_height": 500,
        "icon": "public/logo.png"
      }
    },
    "win": {
      "icon": "public/favicon.ico"
    },
    "mac": {
      "icon": "public/logo.icns"
    },
    "nsis": {
      "icon": "public/favicon.ico",
      "unIcon": "public/favicon.ico",
      "languages": [
        "English"
      ],
      "diffUpdaters": false,
      "hashCalculation": true
    }
  }
}