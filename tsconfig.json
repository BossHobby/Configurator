{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "dom-serial",
      "w3c-web-usb",
      "nw.js"
    ],
    "allowJs": true,
    "noImplicitAny": false
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
